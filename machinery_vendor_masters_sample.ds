                                        }
                                }
                                section SharedAnalytics_Section
                                {
                                        type = shared_user_report_section
                                        displayname = "Reports"
                                        icon = "business-chart-bar-33"
                                }
                        }
                        preference
                        {
                                icon
                                {
                                        style = outline
                                }
                        }
                }
                customize
                {
                        new theme = 11
                        font = "lato"
                        color options
                        {
                                color = "1"
                        }
                        logo
                        {
                                preference = "none"
                                placement = "left"
                        }
                }
        }

